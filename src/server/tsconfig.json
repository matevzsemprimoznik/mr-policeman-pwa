{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "./@types"
    ]
  },
  "include": [
    "src/**/*",
    "@types/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
